{
    "swagger": "2.0",
    "info": {
        "description": "A Go server for a feature-rich booru browsing site.",
        "title": "Go Booru Server API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/search": {
            "get": {
                "description": "Searches for images across multiple booru sources.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "images"
                ],
                "summary": "Search for images",
                "parameters": [
                    {
                        "type": "string",
                        "description": "A comma-separated list of tags to search for.",
                        "name": "tags",
                        "in": "query"
                    },
                    {
                        "type": "boolean",
                        "description": "Whether to include NSFW content.",
                        "name": "nsfw",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "The maximum number of results to return from each provider.",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "A minimum width for the images.",
                        "name": "width",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "A minimum height for the images.",
                        "name": "height",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "The order in which to sort the results.",
                        "name": "orderBy",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/booru.Image"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "booru.Image": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "height": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "nsfw": {
                    "type": "boolean"
                },
                "provider": {
                    "description": "e.g., \"waifu.im\", \"waifu.pics\"",
                    "type": "string"
                },
                "score": {
                    "type": "integer"
                },
                "source": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "url": {
                    "type": "string"
                },
                "width": {
                    "type": "integer"
                }
            }
        }
    }
}